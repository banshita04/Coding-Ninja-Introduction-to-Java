package fundamentals;
import java.util.Scanner;
public class Test {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        int rem = 0;

    	while (num != 0) {
    		rem = (rem*10) + (num%2);
    		num /= 2;
    	}
    	System.out.println(rem);
        }
	}